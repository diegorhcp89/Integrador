<%- include('./partials/head'); %>
    <%- include('./partials/header'); %>

        <section class="section-bg">
            <div class="section">

                <div class="row">
                    <div class="col-xl-12">
                        <div class="section-title">
                            <h2>Favoritos</h2>
                        </div>
                    </div>
                </div>

                <div class="row">

                    <% favorites.forEach(favorite=>{ %>

                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                            <div class="single-product">
                                <div class="product-thumb">
                                    <img src="<%= favorite.imgPath %> " alt="">
                                </div>
                                <div class="product-title">
                                    <h3><a href="/products/book/<%= favorite.bookId %>"> <%= favorite.title %>  </a></h3>
                                </div>
                                <div class="product-btns">
                                    <a href="#" class="btn-small mr-2">R$ <%= favorite.price %>  </a>

                                    <a href="#" class="btn-round mr-2"><i class="fa fa-shopping-cart"></i></a>

                                    <a  class="btn-round" data-toggle="modal" data-target="#modal-<%= favorite.id %>"> <i class="fas fa-trash"></i></a>

                                </div>
                            </div>
                            
                        </div>
                        <!-- Modal -->
                        <div class="modal fade" id="modal-<%= favorite.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Exclus√£o do Favorito</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                </div>
                                <div class="modal-body">
                                Deseja realmente excluir este favorito <%= favorite.title %> ?
                                </div>
                                <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                <a href="/favorites/delete/<%= favorite.id %> "> 
                                    <button type="button" class="btn btn-danger">Confirmar</button>
                                </a>
                                </div>
                            </div>
                            </div>
                        </div>
                    <% }) %> 
                </div>
            </div>
        </section>

        
        <%- include('./partials/footer'); %>
            </body>

            </html>