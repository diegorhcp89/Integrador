<%- include('./partials/head'); %>
  <%- include('./partials/header'); %>

    <main class="container-fluid">

      <section  id="create">
      <h1>Faça seu cadastro</h1>
      

      <form action="/users/save" method="POST">
        <div class="row create-space">
          <div class="form-group col">
            <label for="name">Nome</label>
            <input type="text" name="name" id="name" class="form-control" placeholder="Seu nome" required>
          </div>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" class="form-control" placeholder="email@email.com" required>
        </div>

        <div class="row create-space">
          <div class="form-group col-md-6 col-sm-12">
            <label for="password">Senha</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Senha">
          </div>
  
          <div class="form-group col-md-6 col-sm-12">
            <label for="confPassword">Confirme sua senha</label>
            <input type="password" name="confPassword" class="form-control" id="confPassword" placeholder="Confirme senha" required>
          </div>

        </div>
        
        <% if(typeof validaSenha !== "undefined"){ %>
          <div class="alert alert-warning create-alert" role="alert">
            Senha e Confirme senha não conferem
          </div>
        <% } %> 

        <div class="row create-space">

          <div class="form-group col-md-6 col-sm-12">
            <label for="cpf">CPF</label>
            <input type="text" name="cpf" id="cpf" class="form-control" placeholder="Seu cpf" onkeypress="$(this).mask('000.000.000-00');" required>
            <% if(typeof valiCpf != "undefined"){ %>
              <div class="alert alert-danger create-alert" role="alert">
                CPF inválido!
              </div>
            <% } %>
          </div>

          <div class="form-group col-md-6 col-sm-12">
            <label for="" id="create-sex-label">Sexo</label>
            <div class="form-check form-check-inline create-sex-radio">
              <input class="form-check-input" type="radio" name="gender" id="feminino" value="feminino">
              <label class="form-check-label" for="feminino">Feminino</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="gender" id="masculino" value="masculino"><!-- value:option2 caso necessite mudar, esse era o valor original -->
              <label class="form-check-label" for="masculino">Masculino</label>
            </div>
          </div>

          
        </div> 


        <div class="form-group create-space">
          <div class="form-check">
            <input class="form-check-input" name="infoEmail" value="informacoes" type="checkbox" id="infoEmail">
            <label class="form-check-label" for="infoEmail">
              Deseja receber informações por e-mail?
            </label>
          </div>
        </div>


        <% if (typeof added !== "undefined") { %>
          <div class="form-group col-md-12 alert alert-success">
            Usuário cadastrado com sucesso
          </div>
        <% } %>

        <button type="submit" class="btn btn-primary">Cadastrar</button>

      </form>
      </section>
    </main>

    <%- include('./partials/footer'); %>
      </body>

      </html>