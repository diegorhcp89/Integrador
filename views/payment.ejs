<div class="container_1">
  
  <div class="row">
  
      <div class="col-md-4 order-md-2 mb-5 " >
          

          <h4 class="d-flex justify-content align-items-center mb-3">
              <span class="text-muted">Suas Compras</span>
               </h4>
          <ul class="list-group mb-3 sticky-top">
              <li class="list-group-item d-flex justify-content-between lh-condensed">
                  <div>
                      <h6 class="my-0">Livro1</h6>
                      
                  </div>
                  <span class="text-muted">$12</span>
              </li>
              <li class="list-group-item d-flex justify-content-between lh-condensed">
                  <div>
                      <h6 class="my-0">Livro2</h6>
                     
                  </div>
                  <span class="text-muted">$8</span>
              </li>
              <li class="list-group-item d-flex justify-content-between lh-condensed">
                  <div>
                      <h6 class="my-0">Livro3</h6>
                      
                  </div>
                  <span class="text-muted">$5</span>
              </li>
              <li class="list-group-item d-flex justify-content-between bg-light">
                  <div class="text-success">
                      <h6 class="my-0">Código promoção</h6>
                      <small>SSA10</small>
                  </div>
                  <span class="text-success">-$5</span>
              </li>
              <li class="list-group-item d-flex justify-content-between">
                  <span>Total (R$)</span>
                  <strong>$20</strong>
              </li>
          </ul>
          <form class="card p-2">
              <div class="input-group">
                  <input type="text" class="form-control" placeholder="Promo code">
                  <div class="input-group-append">
                   
                  </div>
              </div>
          </form>
      </div>
      
    

      <div class="col-md-8 order-md-1">
         
         
          
           
              <div class="row justify-content-start">
                <h4 class="mb-2">Dados da entrega</h4>
                <div class="mb-3">
                  <label for="exampleFormControlTextarea1" class="form-label"></label>
                  <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
                </div>
                
               

                      <div class="button1">
                      <div class="col-md-12 mb-3">
                      <a href="#" class="btn btn-info">Alterar Endereço de entrega</a>
                   </div>
                      </div>

                   <div class="col-md-12 mb-3">
                    <div class="btn-group">
                  <a href="#" class="btn btn-info">Enviar informações via whatsapp</a>
                 </div>

                  </div>

                  </div>
              </div>

             
              <div class="d-flex justify-content-center">
            <div class="pagamento">               
              <hr class="mb-4">              
              <h4 class="mb-3">pagamento</h4>
              <div class="d-block my-3">
                
                
                       <div class="custom-control custom-radio" >
                      <input id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked="" required="">
                      <label class="custom-control-label" for="credit">Cartão de débito</label>
                  </div>
                  <div class="custom-control custom-radio">
                      <input id="debit" name="paymentMethod" type="radio" class="custom-control-input" required="">
                      <label class="custom-control-label" for="debit">Cartão de Crédito</label>
                  </div>
                  <div class="custom-control custom-radio">
                      <input id="paypal" name="paymentMethod" type="radio" class="custom-control-input" required="">
                      <label class="custom-control-label" for="paypal">PayPal</label>
                  </div>
              </div>
              <div class="row">
                  <div class="col-md-4 mb-3">
                   
                      <label for="cc-name">Nome no Cartão</label>
                      <input type="text" class="form-control" id="cc-name" placeholder="" required="">
                      <small class="text-muted">Nome igual ao escrito no Cartão</small>
                      <div class="invalid-feedback"> nome do cartão obrigatório </div>
                  </div>
                  
                  <div class="col-md-4 mb-3">
                      <label for="cc-number"> Número do cartão</label>
                      <input type="text" class="form-control" id="cc-number" placeholder="" required="">
                      <div class="invalid-feedback"> número é obrigatório </div>
                  </div>
              </div>
              <div class="row">
                  <div class="col-md-3 mb-3">
                      <label for="cc-expiration">Validade</label>
                      <input type="text" class="form-control" id="cc-expiration" placeholder="" required="">
                      <div class="invalid-feedback"> Expiration date required </div>
                  </div>
                  <div class="col-md-3 mb-3">
                      <label for="cc-cvv">CVV</label>
                      <input type="text" class="form-control" id="cc-cvv" placeholder="" required="">
                      <div class="invalid-feedback"> Número de segurança obrigatório</div>
                  </div>
              </div>
              
              <hr class="mb-4">
              <div class="d-flex justify-content-center">
              <button class="btn btn-info btn-lg btn-block" type="submit">Continuar</button>
              </div>
          
      </div>
  </div>
 </div>
